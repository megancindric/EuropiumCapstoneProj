@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

    <div class="container-fluid">
        <div class="jumbotron">
            <h3 class="display-3" style="text-align : center">Welcome to Walkabout</h3>
            <hr class="my-sm-4">
            <p class="lead" style="text-align:center">Walking doesn't have to be boring!  With this innovative technology designed by Sharon Philipps, you can create fun and engaging walks right in your own neighborhood!</p>
        </div>
        <div class="row">
            <div class="col-lg-6" style="text-align:center">
                <h2>How it Works:</h2>
                <p>
                    Using Google Maps API & Google Directions, we're able to create dynamic, custom routes in your community!
                    We'll keep track of your distance, time, your total score for your markers, and more!
                </p>
            </div>
            <div class="col-lg-6" style="text-align:center">
                <h2>What's the catch?</h2>
                <p>
                    No catch here!  We're dedicated to providing a fun, <strong>free</strong> tool to help folks get out and explore their community!
                    Click the Create Account button above to get started!
                </p>
            </div>
        </div>
    </div>
